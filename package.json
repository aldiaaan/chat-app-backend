{
  "name": "chat-app-backend",
  "version": "1.0.0",
  "description": "chat app backend",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src/**/*.{ts,js} --fix",
    "format": "",
    "build": "rimraf dist/ && tsc",
    "prepare": "husky install",
    "start": "tsc-watch -p ./tsconfig.json --outDir ./dist --onSuccess \"node ./dist/index.js\"",
    "start:production": "pm2 start --name 'backend_app' --node-args='-r ./tsconfig-paths.js' ./dist/index.js"
  },
  "_moduleAliases": {
    "@": "./dist"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.1",
    "@types/express": "^4.17.13",
    "@types/lodash": "^4.14.177",
    "@types/multer": "^1.4.7",
    "@types/node": "^16.11.9",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "^8.2.0",
    "eslint-config-alloy": "^4.4.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.0.3",
    "module-alias": "^2.2.2",
    "pm2": "^5.1.2",
    "prettier": "^2.4.1",
    "rimraf": "^3.0.2",
    "tsc-watch": "^4.5.0",
    "tsconfig-paths": "^3.11.0",
    "typescript": "^4.5.2"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "eslint src/**/*.{ts,js} --fix",
      "prettier --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "dependencies": {
    "@types/streamifier": "^0.1.0",
    "cloudinary": "^1.27.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "firebase-admin": "^10.0.0",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.13",
    "multer": "^1.4.3",
    "serialize-error": "^9.0.0",
    "streamifier": "^0.1.1"
  }
}
