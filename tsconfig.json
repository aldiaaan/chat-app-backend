{
  "compilerOptions": {
    "target": "ES2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "removeComments": true,
    "paths": {
      "@/*": ["./*"]
    },
    "resolveJsonModule": true,
    "baseUrl": "src"
  },
  "include": ["src/", "src/firebase-admin-credential.json"],
  "exclude": ["node_modules"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
